@model IEnumerable<CouponGetDto>
<div class="page-body">
    <!-- All User Table Start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="title-header option-title">
                            <h5>All Coupons</h5>
                            <form class="d-inline-flex">
                                <a asp-action="create"
                                   class="align-items-center btn btn-theme d-flex">
                                    <i data-feather="plus-square"></i>Add New
                                </a>
                            </form>
                        </div>

                        <div class="table-responsive category-table">
                            <div>
                                <table class="table all-package theme-table" id="table_id">
                                    <thead>
                                        <tr>
                                            <th>Coupon Title</th>
                                            <th>Coupon Code</th>
                                            <th>Discount</th>
                                            <th>Status</th>
                                            <th>Options</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (CouponGetDto item in Model)
                                        {
                                            <tr>
                                                <td>@item.Title</td>
                                                <td>@item.Code</td>
                                                <td>@item.DiscountAmount</td>
                                                <td>@((Bacola.Core.Enums.CouponStatus)item.Status)</td>
                                                <td>
                                                    @if ((Bacola.Core.Enums.CouponStatus)item.Status == Bacola.Core.Enums.CouponStatus.Active)
                                                    {
                                                        <a onclick="return confirm('are you sure?')" asp-action="useLess" asp-route-id="@item.Id" class="badge badge-danger">Useless</a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="Active" asp-route-id="@item.Id" class="badge badge-warning">Active</a>}
                                                    <a onclick="return confirm('are you sure?')" asp-action="remove" asp-route-id="@item.Id" class="badge badge-danger">Remove</a>
                                                    <a asp-action="update" asp-route-id="@item.Id" class="badge badge-warning">Update</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

